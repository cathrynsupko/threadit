
  <div class="post">
    <%= render partial: 'posts/vote', locals:{ post: post } %>
    
    <div class="title">
      <%= link_to post.title, post_path(post), class:"title-link"%> <br>
      <% if post.author %>
        <span class="small">
          created by <%= link_to post.author.name, user_path(post.author) %> 
        <%= time_ago_in_words(post.created_at) %> ago</span><br>
      <% end %>
        <span class="small">
          <%= pluralize(post.comments.count, 'comment') %>
        </span>
    </div>
 
  </div>



